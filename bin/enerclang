#!/bin/sh

enercdir=`dirname $0`/..
builtdir=$enercdir/build/built
incdir=$enercdir/include
clang=$builtdir/bin/clang

if [ `basename $0` = "enerclang++" ]; then
    clang="$clang++"
fi

if [ `uname` = "Darwin" ]; then
    libext=dylib
else
    libext=so
fi
enerclib=$builtdir/lib/EnerCTypeChecker.$libext

exec $clang -Xclang -load -Xclang $enerclib -Xclang -add-plugin -Xclang enerc-type-checker -I $incdir $@
